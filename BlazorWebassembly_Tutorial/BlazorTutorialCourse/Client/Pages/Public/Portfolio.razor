@page "/portfolio"

<Client.Components.Public.Shared.Navbar />

 @if (_showingExamplePortfolioProjectModalWindow == true)
{
	<Client.Components.Public.Portfolio.ExamplePortfolioProjectModalWindow ParentMethodToCallOnClickBtnClose="() => _showingExamplePortfolioProjectModalWindow=false" />
}

<main class="container min-vh-90 py-5">
	<div class="row">
		<div class="col">
			<h1 class="mt-3">Portfolio</h1>

			<P>On this page you see projects...</P>

			<div class="row mt-4">
				<div class="col-md-4 my-2">
					<div class="card shadow">

						<img src="assets/img/publicbackgrounds/bg-motherboard.jpg" alt="Portfolio project img"/>
						<div class="card-body">
							<h3 class="card-title fw-bold">My first project</h3>
							<p class="card-text">
								@(String.Join(" ", _exampleExcerpt.Split().Take(25).ToArray()))...
							</p>
						</div>

						<button @onclick="() => _showingExamplePortfolioProjectModalWindow = true" class="btn btn-primary stretched-link">
							<i class="fas fa-info-circle"></i>More information
						</button>
					</div>
				</div>

				<div class="col-md-4 my-2">
					<div class="card shadow">

						<img src="assets/img/publicbackgrounds/bg-motherboard.jpg" alt="Portfolio project img"/>
						<div class="card-body">
							<h3 class="card-title fw-bold">My first project</h3>
							<p class="card-text">
								@(String.Join(" ",_exampleExcerpt.Split().Take(25).ToArray()))...
							</p>
						</div>

						<button @onclick="() => _showingExamplePortfolioProjectModalWindow = true" class="btn btn-primary stretched-link">
							<i class="fas fa-info-circle"></i>More information
						</button>
					</div>
				</div>

				<div class="col-md-4 my-2">
					<div class="card shadow">

						<img src="assets/img/publicbackgrounds/bg-motherboard.jpg" alt="Portfolio project img"/>
						<div class="card-body">
							<h3 class="card-title fw-bold">My first project</h3>
							<p class="card-text">
								@(String.Join(" ", _exampleExcerpt.Split().Take(25).ToArray()))...
							</p>
						</div>

						<button @onclick="() => _showingExamplePortfolioProjectModalWindow = true" class="btn btn-primary stretched-link">
							<i class="fas fa-info-circle"></i>More information
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>

<Client.Components.Public.Shared.Footer />

